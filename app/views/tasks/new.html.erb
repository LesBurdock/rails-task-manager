<h2>Add a new Task<h2>
<%= form_for(@task)  do |f| %>
 <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_area :details%>
  <div class = 'btn btn-primary'>
  <%= f.submit %>
  </div>
<% end %>
<div>
<%= link_to 'Back to task list', tasks_path %>
</div>
